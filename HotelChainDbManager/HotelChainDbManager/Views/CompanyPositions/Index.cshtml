@model IEnumerable<HotelChainDbManager.Data.CompanyPosition>

@{
    ViewData["Title"] = "Позиції";
}

<h1>Позиції</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Створити</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkingRate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkingRate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Редагувати</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" >Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
