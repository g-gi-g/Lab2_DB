@model IEnumerable<HotelChainDbManager.Data.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patronimic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyPositionNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HotelNumberNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patronimic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyPositionNavigation.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HotelNumberNavigation.Number)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdCardNumber">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdCardNumber">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdCardNumber">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
