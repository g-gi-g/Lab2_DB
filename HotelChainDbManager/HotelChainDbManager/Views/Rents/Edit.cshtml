@model HotelChainDbManager.Data.Rent

@{
    ViewData["Title"] = "Редагувати";
}

<h1>Редагувати</h1>

<h4>оренду</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Resident" class="form-control" style="display:none;" />
                <input asp-for="RoomNumber" class="form-control" style="display:none;" />
                <input asp-for="HotelNumber" class="form-control" style="display:none;" />
            </div>
            <div class="form-group">
                <label asp-for="CostPerDay" class="control-label"></label>
                <input asp-for="CostPerDay" class="form-control" />
                <span asp-validation-for="CostPerDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RentStart" class="control-label"></label>
                <input asp-for="RentStart" type="date" class="form-control" />
                <span asp-validation-for="RentStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RentEnd" class="control-label"></label>
                <input asp-for="RentEnd" type="date" class="form-control" />
                <span asp-validation-for="RentEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
